{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["chrome"],
    "outDir": "dist/browser"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/platform/node/**/*.ts",
    "src/server.ts",
    "src/http/**/*.ts",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}
